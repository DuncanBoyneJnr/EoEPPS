---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout title="Our Sponsors" description="Meet the sponsors who make the East of England Power Platform Summit 2026 possible.">
  <Hero
    title="Our Sponsors"
    subtitle="Thank you to the organisations making EoEPPS possible."
  />

  <!-- Current Sponsors -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-text mb-8 text-center">Current Sponsors</h2>

      <!-- Headline Sponsor -->
      <div class="mb-4 text-center">
        <span class="inline-block bg-primary text-white font-bold text-sm px-4 py-1 rounded-full uppercase tracking-wide">Headline Sponsor</span>
      </div>
      <div class="max-w-xl mx-auto mb-16">
        <div class="bg-white rounded-xl shadow-lg border-2 border-primary p-8 text-center">
          <div class="h-28 flex items-center justify-center mb-6">
            <img src="/images/sponsors/TheMentoringHub.svg" alt="The Mentoring Hub" class="max-h-full max-w-full object-contain" />
          </div>
          <p class="font-bold text-text text-xl mb-2">The Mentoring Hub</p>
          <p class="text-text-light mb-6">
            A UK charity connecting underrepresented people in tech with mentors, resources, and opportunities. One connection can change everything.
          </p>
          <a
            href="https://thementoringhub.org/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-primary text-white px-6 py-2.5 rounded-lg font-semibold hover:bg-primary-dark transition-colors"
          >
            Visit thementoringhub.org<span class="sr-only"> (opens in new tab)</span>
          </a>
        </div>
      </div>

      <!-- Community Sponsors -->
      <div class="mb-4 text-center">
        <span class="inline-block bg-secondary text-gray-900 font-bold text-sm px-4 py-1 rounded-full uppercase tracking-wide">Community Sponsor</span>
      </div>
      <div class="max-w-xl mx-auto mb-16">
        <div class="bg-white rounded-xl shadow-md border border-gray-200 p-8 text-center">
          <div class="h-20 flex items-center justify-center mb-6">
            <img src="/images/sponsors/Powercademy.png" alt="Powercademy" class="max-h-full max-w-full object-contain" />
          </div>
          <p class="font-bold text-text text-xl mb-2">Powercademy</p>
          <p class="text-text-light mb-6">
            The Power Platform's Only Platform â€” practical, hands-on Power Platform, Copilot, and AI training for all skill levels.
          </p>
          <a
            href="https://www.powercademy.com/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block bg-secondary text-gray-900 px-6 py-2.5 rounded-lg font-semibold hover:opacity-90 transition-opacity"
          >
            Visit powercademy.com<span class="sr-only"> (opens in new tab)</span>
          </a>
        </div>
      </div>

      <div class="text-center">
        <p class="text-text-light text-lg mb-6">Interested in becoming a sponsor?</p>
        <a href="/sponsorship" class="inline-block bg-primary text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-primary-dark transition-colors">
          View Sponsorship Packages
        </a>
      </div>
    </div>
  </section>

  <!-- Why Sponsor CTA -->
  <section class="py-16 bg-gradient-to-br from-primary to-accent text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Support the East of England Power Platform Community</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Sponsoring EoEPPS puts your brand in front of Power Platform professionals from across the region.
      </p>
      <a
        href="/sponsorship"
        class="inline-block bg-white text-primary px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors"
      >
        Become a Sponsor
      </a>
    </div>
  </section>
</BaseLayout>
