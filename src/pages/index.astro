---
import BaseLayout from '../layouts/BaseLayout.astro';
import SpeakerCard from '../components/SpeakerCard.astro';
import { getCollection } from 'astro:content';

const allSpeakers = await getCollection('speakers');
const organizers = allSpeakers.filter(s => s.data.isOrganizer);
---

<BaseLayout title="Home">

  <!-- ======= INTRO OVERLAY ======= -->
  <div id="intro-overlay">
    <img class="intro-logo-eoepps" src="/images/Logo.png" alt="East of England Power Platform Summit" />
    <img class="intro-logo-mentoring" src="/images/sponsors/TheMentoringHub.svg" alt="The Mentoring Hub" />
    <div class="intro-center">
      <h1 class="intro-title">East of England<br/>Power Platform Summit</h1>
      <p class="intro-date">1st &amp; 2nd May 2026 &bull; Norwich, Norfolk</p>
      <button class="intro-enter" id="intro-enter">Enter</button>
    </div>
  </div>
  <!-- ======= / INTRO OVERLAY ======= -->

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-primary via-primary-dark to-accent text-white py-16 md:py-24">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">

        <!-- Logos — top on mobile, right on desktop -->
        <div class="flex justify-center items-center gap-6 lg:order-2 flex-wrap">
          <img src="/images/Logo.png" alt="EoEPPS Logo" class="w-44 sm:w-56 lg:w-64 h-auto drop-shadow-xl" />
          <a href="https://thementoringhub.org/" target="_blank" rel="noopener noreferrer">
            <img src="/images/sponsors/TheMentoringHub.svg" alt="The Mentoring Hub" class="w-44 sm:w-56 lg:w-64 h-auto brightness-0 invert drop-shadow-xl" />
          </a>
        </div>

        <!-- Text — below logos on mobile, left on desktop -->
        <div class="text-center lg:text-left lg:order-1">
          <p class="text-secondary font-bold text-lg md:text-xl mb-4 uppercase tracking-wide">
            1st &amp; 2nd May 2026 &bull; Norwich, Norfolk
          </p>
          <h1 class="text-4xl md:text-6xl font-bold mb-4 leading-tight">
            East of England<br />Power Platform Summit
          </h1>
          <p class="text-lg text-white/85 mb-8 max-w-xl mx-auto lg:mx-0">
            The East of England's flagship Power Platform conference. Two days of sessions, workshops, and networking.
          </p>

          <!-- Partnership -->
          <div class="border-t border-white/25 pt-6">
            <p class="text-white/80 text-xl font-bold uppercase tracking-widest">
              Proudly in partnership with The Mentoring Hub
            </p>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Buttons -->
  <section class="bg-white py-8 shadow-md">
    <div class="container mx-auto px-4">
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <a
          href="https://eoeppstickets.netlify.app"
          target="_blank"
          rel="noopener noreferrer"
          class="w-full sm:w-auto inline-block bg-primary text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-primary-dark transition-colors shadow-md text-center"
        >
          Get Tickets<span class="sr-only"> (opens in new tab)</span>
        </a>
        <a
          href="/speakers"
          class="w-full sm:w-auto inline-block bg-secondary text-gray-900 px-8 py-4 rounded-lg font-bold text-lg hover:opacity-90 transition-opacity shadow-md text-center"
        >
          Meet the Speakers
        </a>
        <a
          href="/about"
          class="w-full sm:w-auto inline-block border-2 border-primary text-primary px-8 py-4 rounded-lg font-bold text-lg hover:bg-primary/5 transition-colors text-center"
        >
          Learn More
        </a>
      </div>
    </div>
  </section>


  <!-- What to Expect -->
  <section class="py-16 bg-background-alt">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-text mb-4">What to Expect</h2>
        <p class="text-text-light text-lg max-w-2xl mx-auto">
          Two packed days of learning, sharing, and connecting with Power Platform professionals from across the East of England and beyond.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <div class="bg-white p-6 rounded-xl shadow-lg border border-border">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-text mb-2">Hands-on Workshops</h3>
          <p class="text-text-light">Day 1 is dedicated to practical, hands-on workshops. Get your hands dirty building real solutions with Power Platform tools.</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-lg border border-border">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-text mb-2">Expert Sessions</h3>
          <p class="text-text-light">Day 2 features multiple tracks of conference sessions from community experts, Microsoft MVPs, and industry professionals.</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-lg border border-border">
          <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-text mb-2">Networking</h3>
          <p class="text-text-light">Connect with Power Platform professionals from across the region. Build relationships that go beyond the conference.</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-lg border border-border">
          <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-text mb-2">Multiple Tracks</h3>
          <p class="text-text-light">Sessions covering Power Apps, Power Automate, Power BI, Power Pages, Copilot Studio, Dataverse, and more.</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-lg border border-border">
          <div class="w-12 h-12 bg-secondary/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-text mb-2">Exhibition Area</h3>
          <p class="text-text-light">Explore an exhibition area with sponsors, partners, and vendors showcasing the latest in the Power Platform ecosystem.</p>
        </div>

        <div class="bg-white p-6 rounded-xl shadow-lg border border-border">
          <div class="w-12 h-12 bg-accent/10 rounded-lg flex items-center justify-center mb-4">
            <svg class="w-6 h-6 text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold text-text mb-2">Free Conference Day</h3>
          <p class="text-text-light">Saturday's conference day is completely free to attend. Workshop places on Friday are ticketed — keep an eye out for registration details.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Schedule Overview -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-text mb-4">The Schedule</h2>
        <p class="text-text-light text-lg max-w-2xl mx-auto">
          Two full days of Power Platform content in Norwich.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Day 1 -->
        <div class="bg-white rounded-xl shadow-lg border border-border overflow-hidden">
          <div class="bg-primary text-white px-6 py-5">
            <div class="text-sm font-semibold text-white/80 mb-1">Friday 1st May 2026</div>
            <h3 class="text-2xl font-bold">Day 1: Workshop Day</h3>
            <div class="text-white/80 text-sm mt-1">9:00 AM – 4:30 PM</div>
          </div>
          <div class="p-6">
            <div class="flex items-start mb-4">
              <svg class="w-5 h-5 text-primary mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <div class="font-semibold text-text">Townshend House</div>
                <div class="text-text-light text-sm">30 Crown Rd, Norwich NR1 3DT</div>
                <a href="https://share.google/0XFQL3ShPVJXjfstT" target="_blank" rel="noopener noreferrer" class="text-primary text-sm hover:underline">
                  View on Google Maps<span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </div>
            <p class="text-text-light mb-4">
              Hands-on practical workshops led by experts. Roll up your sleeves and build real solutions with Power Platform tools.
            </p>
            <a href="/schedule#day1" class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors">
              View Day 1 Schedule
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>

        <!-- Day 2 -->
        <div class="bg-white rounded-xl shadow-lg border border-border overflow-hidden">
          <div class="bg-accent text-white px-6 py-5">
            <div class="text-sm font-semibold text-white/80 mb-1">Saturday 2nd May 2026</div>
            <h3 class="text-2xl font-bold">Day 2: Conference Day</h3>
            <div class="text-white/80 text-sm mt-1">8:00 AM – 5:30 PM</div>
          </div>
          <div class="p-6">
            <div class="flex items-start mb-4">
              <svg class="w-5 h-5 text-accent mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <div>
                <div class="font-semibold text-text">The Space, Norwich</div>
                <div class="text-text-light text-sm">Norwich, Norfolk</div>
                <a href="https://maps.app.goo.gl/yZwjpQounUmR1Hz7A" target="_blank" rel="noopener noreferrer" class="text-accent text-sm hover:underline">
                  View on Google Maps<span class="sr-only"> (opens in new tab)</span>
                </a>
              </div>
            </div>
            <p class="text-text-light mb-4">
              A full day of conference sessions across multiple tracks. Keynotes, breakouts, and networking opportunities throughout the day.
            </p>
            <a href="/schedule#day2" class="inline-flex items-center text-accent font-semibold hover:text-accent/80 transition-colors">
              View Day 2 Schedule
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Where It's Happening -->
  <section class="py-16 bg-background-alt">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-text mb-4">Where It's Happening</h2>
        <p class="text-text-light text-lg max-w-2xl mx-auto">
          Two great venues in the heart of Norwich — one for each day.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
        <!-- Venue 1 -->
        <div class="bg-white rounded-xl shadow-lg border border-border overflow-hidden">
          <div class="bg-primary px-6 py-4 text-white">
            <div class="text-sm font-semibold text-white/80 mb-1">Day 1 &bull; Friday 1st May</div>
            <h3 class="text-xl font-bold">Townshend House</h3>
          </div>
          <div class="p-6">
            <p class="text-text-light mb-4">
              A modern conference and events space in central Norwich, Townshend House is the perfect setting for Day 1's hands-on workshops. With dedicated workshop rooms and great transport links, it's easy to get to and a great place to learn.
            </p>
            <div class="flex items-start text-sm text-text-light mb-4">
              <svg class="w-4 h-4 text-primary mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>30 Crown Rd, Norwich NR1 3DT</span>
            </div>
            <a
              href="https://share.google/0XFQL3ShPVJXjfstT"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-primary font-semibold hover:text-primary-dark transition-colors text-sm"
            >
              View on Google Maps
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <span class="sr-only"> (opens in new tab)</span>
            </a>
          </div>
        </div>

        <!-- Venue 2 -->
        <div class="bg-white rounded-xl shadow-lg border border-border overflow-hidden">
          <div class="bg-accent px-6 py-4 text-white">
            <div class="text-sm font-semibold text-white/80 mb-1">Day 2 &bull; Saturday 2nd May</div>
            <h3 class="text-xl font-bold">The Space, Norwich</h3>
          </div>
          <div class="p-6">
            <p class="text-text-light mb-4">
              Day 2 moves to The Space — a purpose-built venue ideally suited to a full conference day. With multiple breakout rooms for parallel tracks, a main hall for keynotes, and space for an exhibition area, it's exactly the kind of venue a summit deserves.
            </p>
            <div class="flex items-start text-sm text-text-light mb-4">
              <svg class="w-4 h-4 text-accent mr-2 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>Norwich, Norfolk</span>
            </div>
            <a
              href="https://maps.app.goo.gl/yZwjpQounUmR1Hz7A"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-accent font-semibold hover:text-accent/80 transition-colors text-sm"
            >
              View on Google Maps
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              <span class="sr-only"> (opens in new tab)</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Organising Team -->
  <section class="py-16 bg-gradient-to-br from-primary/5 to-accent/5">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-text mb-4">Organised By</h2>
        <p class="text-text-light text-lg max-w-2xl mx-auto">
          EoEPPS is organised by the team behind the Norfolk Power Platform User Group.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
        {organizers.map((organizer) => (
          <SpeakerCard
            name={organizer.data.name}
            title={organizer.data.title}
            company={organizer.data.company}
            bio={organizer.data.bio}
            slug={organizer.slug}
            image={organizer.data.image}
            linkedin={organizer.data.linkedin}
            twitter={organizer.data.twitter}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Sponsors Section -->
  <section class="py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-text mb-4">Our Sponsors</h2>
      <p class="text-text-light text-lg max-w-2xl mx-auto mb-10">
        EoEPPS is made possible by the generous support of our sponsors.
      </p>

      <div class="flex flex-wrap justify-center items-center gap-8 mb-10">
        <div class="bg-white rounded-xl shadow-lg border border-border p-8 max-w-xs">
          <div class="h-16 flex items-center justify-center mb-4">
            <img src="/images/sponsors/TheMentoringHub.svg" alt="The Mentoring Hub" class="max-h-full max-w-full object-contain" />
          </div>
          <p class="text-text-light text-sm">Official Sponsor</p>
        </div>
      </div>

      <a href="/sponsorship" class="inline-block bg-secondary text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-secondary-dark transition-colors">
        Become a Sponsor
      </a>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-primary text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Speaker Announcements Coming Soon</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Our speaker lineup is confirmed — follow us on LinkedIn to be the first to hear the announcements.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="https://www.linkedin.com/company/eoepps/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block bg-white text-primary px-8 py-4 rounded-lg font-bold text-lg hover:bg-gray-100 transition-colors"
        >
          Follow on LinkedIn<span class="sr-only"> (opens in new tab)</span>
        </a>
        <a
          href="/contact"
          class="inline-block border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-white/10 transition-colors"
        >
          Contact Us
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style is:global>
  /* Lock scroll while intro is showing */
  body.intro-active {
    overflow: hidden;
  }

  /* ── Overlay ── */
  #intro-overlay {
    position: fixed;
    inset: 0;
    background: linear-gradient(135deg, #1a0538 0%, #3b0764 35%, #5b21b6 70%, #7c3aed 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 200;
    overflow: hidden;
    transition: opacity 0.8s ease;
  }
  #intro-overlay.dismiss {
    opacity: 0;
    pointer-events: none;
  }

  /* ── EoEPPS logo: fades in centre → slides left ── */
  .intro-logo-eoepps {
    position: absolute;
    width: min(32vw, 360px);
    top: 50%;
    left: 50%;
    opacity: 0;
    animation: eoeppsIn 5.5s cubic-bezier(0.4, 0, 0.2, 1) 0.4s forwards;
  }
  @keyframes eoeppsIn {
    0%   { opacity: 0; filter: blur(28px); transform: translate(-50%, -50%) scale(1.06); }
    22%  { opacity: 1; filter: blur(0);    transform: translate(-50%, -50%) scale(1); }
    42%  { opacity: 1; filter: blur(0);    transform: translate(-50%, -50%) scale(1); }
    100% { opacity: 1; filter: blur(0);    transform: translate(calc(-50% - 30vw), -50%) scale(0.92); }
  }

